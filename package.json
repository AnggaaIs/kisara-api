{
  "name": "kisara-api",
  "version": "1.0.0",
  "description": "API untuk website kisara.my.id yang menyediakan layanan dan fitur berbasis Fastify dan Mikro-ORM. Dibangun untuk performa tinggi dan skalabilitas.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:debug": "cross-env NODE_ENV=development ts-node --inspect-brk src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate:create": "mikro-orm migration:create --config ./src/configg/mikro-orm.config.ts ./dist/config/mikro-orm.config.js",
    "migrate:up": "mikro-orm migration:up --config ./src/config/mikro-orm.config.ts ./dist/config/mikro-orm.config.js",
    "migrate:down": "mikro-orm migration:down --config ./src/config/mikro-orm.config.ts ./dist/config/mikro-orm.config.js"
  },
  "keywords": [
    "KiSaRa",
    "Kirim Pesan Rahasia",
    "Kirim Pesan",
    "Pesan Rahasia",
    "Pesan",
    "Rahasia",
    "Kirim",
    "Pesan Rahasia KiSaRa",
    "API",
    "Fastify",
    "Mikro-ORM",
    "TypeScript",
    "kisara.my.id",
    "REST API",
    "Backend",
    "Scalable API"
  ],
  "author": "AnggaaIs <servantangga@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@mikro-orm/core": "^6.4.11",
    "@mikro-orm/migrations": "^6.4.11",
    "@mikro-orm/postgresql": "^6.4.11",
    "@mikro-orm/reflection": "^6.4.11",
    "@sinclair/typebox": "^0.34.31",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.11",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}